<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Se añade permisos de internet para que la aplicación pueda obtener JSON u otras necesidades -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/image_removebg_preview"
        android:label="@string/app_name"
        android:roundIcon="@drawable/image_removebg_preview"
        android:supportsRtl="true"
        android:theme="@style/Theme.NaughtySign"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDpqqkYgv0oTJZpdEIBA6tcI_C-mNyl4iU" />

        <activity
            android:name=".activities.LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.InterestsActivity" />
        <activity android:name=".activities.PhotoSelectorActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ProfileConfigurationActivity"
            android:exported="true" />
        <activity
            android:name=".activities.GeneralSettingsActivity"
            android:exported="true" />

        <activity android:name=".activities.LikeMatchProfileActivity" />

        <activity android:name=".activities.PostRegisterActivity" />


        <service
