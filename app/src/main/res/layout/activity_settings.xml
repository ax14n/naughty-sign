<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Botón de cerrar sesión. -->
    <ImageView
        android:id="@+id/log_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="Botón para cerrar sesión"
        android:padding="12dp"
        android:src="@drawable/logout_24dp_ff1e1e_fill0_wght400_grad0_opsz24" /> <!-- Descripción añadida -->

    <!-- Foto de perfil del usuario de la aplicación. -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="Foto de perfil del usuario"
        android:scaleX="1.7"
        android:scaleY="1.7"
        android:src="@mipmap/david_bisbal_round" /> <!-- Descripción añadida -->

    <!-- Botón de cambiar foto del usuario de la aplicación. -->
    <Button
        android:id="@+id/change_avatar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/trans"
        android:text="Editar foto o avatar"
        android:textColor="@color/blue" />

    <!-- Etiqueta que representa la entrada a la categoría de 'About you' -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Sobre ti"
        android:textColor="@color/black" /> <!-- Updated text color -->

    <!--
        A PARTIR DE AHORA APARECERÁN BOTONES COMPUESTOS
     -->

    <!-- Botón para cambiar el nombre de usuario -->
    <include
        android:id="@+id/change_username_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar la descripción del usuario -->
    <include
        android:id="@+id/change_description_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar la cita del usuario -->
    <include
        android:id="@+id/change_quote_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar las preferencias románticas -->
    <include
        android:id="@+id/change_romatic_preferences_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar el rango de edad -->
    <include
        android:id="@+id/change_age_range_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar los hobbies del usuario -->
    <include
        android:id="@+id/change_hobbies_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar las fotos del usuario -->
    <include
        android:id="@+id/change_photos_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Comienzo de la sección de ajustes generales de la aplicación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Generales"
        android:textColor="@color/black" />

    <!-- Botón para cambiar los hobbies del usuario -->
    <include
        android:id="@+id/change_max_distance_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para cambiar las fotos del usuario -->
    <include
        android:id="@+id/change_theme_button"
        layout="@layout/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
