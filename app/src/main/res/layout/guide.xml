<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/guideLayout"
    android:visibility="visible">

    <ImageView
        android:id="@+id/pulseImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:src="@drawable/rectangle_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttons_guide"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="118dp"
        android:layout_gravity="bottom"
        android:src="@drawable/rectangle_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Usa el menú inferior para desplazarte entre ventanas!"
        android:background="@drawable/dislikebotoncito"
        android:layout_margin="50dp"
        android:gravity="center"
        android:maxLines="5"
        android:padding="20dp"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:alpha="0"/>

    <TextView
        android:id="@+id/textStep2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Juzga a tus pretendientes con los botones de LIKE y NEXT!"
        android:background="@drawable/likebotoncito"
        android:layout_margin="50dp"
        android:gravity="center"
        android:maxLines="5"
        android:padding="20dp"
        android:textSize="26sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:alpha="0"/>

    <android.widget.Button
        android:id="@+id/exit_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saltar guía"
        android:layout_gravity="top|right"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textColor="@color/blue"/>


</FrameLayout>